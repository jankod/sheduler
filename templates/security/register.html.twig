{% extends "security/_sec_layout.html.twig" %}
{% form_theme form 'form/fields.html.twig' %}

{% block javascripts %}
    <script language="JavaScript" type="javascript">
        $(document).ready(function () {
            $("body").addClass("app flex-row align-items-center");
        });
    </script>
{% endblock %}

{% block head %}
    <style>
        .input-group {
            padding-bottom: 1em;
        }

        .input-group .invalid-feedback {
            position: absolute;
            left: 0;
            top: 2.5em;
        }


    </style>
{% endblock %}

{% block body %}
    {#<body class="app flex-row align-items-center">#}

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}


    {# BUG: addon https://github.com/twbs/bootstrap/issues/23454 #}
    <div class="container" style="margin-top: 100px">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mx-4">
                    <div class="card-body p-4">
                        <h1>Register</h1>
                        <p class="text-muted">Create your account</p>


                        <div class="input-group mb-3">
                            <span class="input-group-addon"><i class="icon-lock"></i></span>
                            {{ form_widget(form.email, {'attr': {'placeholder':'Email'}}) }}
                            {{ form_errors(form.email) }}
                        </div>


                        <div class="input-group mb-3">
                            <span class="input-group-addon"><i class="icon-lock"></i></span>
                            {{ form_widget(form.password1, {'attr': {'placeholder':'Lozinka'}}) }}
                            {{ form_errors(form.password1) }}
                        </div>

                        <div class="input-group mb-3">
                            <span class="input-group-addon"><i class="icon-lock"></i></span>
                            {{ form_widget(form.password2, {'attr': {'placeholder':'Lozinka ponovo'}}) }}
                            {{ form_errors(form.password2) }}
                        </div>

                        <div>
                            <div class=" mb-4">
                                {{ form_widget(form.termsAccepted, {'label': 'Poslovanje'}) }}
                                {{ form_errors(form.termsAccepted) }}
                            </div>

                        </div>
                        <button type="submit" class="btn btn-block btn-success">Create Account</button>
                    </div>
                    <div class="card-footer p-4">
                        <div class="row">
                            <div class="col-6">
                                <button class="btn btn-block btn-facebook" type="button">
                                    <span>facebook</span>
                                </button>
                            </div>
                            <div class="col-6">
                                <button class="btn btn-block btn-twitter" type="button">
                                    <span>twitter</span>
                                </button>
                            </div>
                        </div>
                        <div class="pull-right">
                            <br>
                            <a role="button" class="btn btn-primary " href="{{ path('login') }}">Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}